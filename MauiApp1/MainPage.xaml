<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">

    <VerticalStackLayout>
        <Label Text="Cards." FontAttributes="Bold" FontSize="62" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,0,0,38" />

        <StackLayout Orientation="Vertical" Margin="40" Spacing="15" >
            <Button Text="Étudier" FontSize="45" FontFamily="arial" HeightRequest="180" BackgroundColor="#0085FF" Clicked="EtudierButton_Clicked"/>
            <Button Text="Mes cartes" FontSize="45" FontFamily="arial" HeightRequest="180" BackgroundColor="#FF7A00" Clicked="MesCartesButton_Clicked"/>
            <Button Text="Paramètres" FontSize="20" FontFamily="arial" HeightRequest="50" WidthRequest="270" BackgroundColor="#00C514" Clicked="ParametresButton_Clicked"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>
